{
  "name": "hugo-lightning-theme-styles",
  "version": "1.0.0",
  "author": "KoharaKazuya",
  "browserslist": [
    "> 1%",
    "ie 11"
  ],
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "cssnano": "^3.10.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "postcss-hash": "^0.2.1",
    "postcss-import": "^11.0.0"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:criticals": "postcss -d ../layouts/partials/ 'src/critical-*.css'",
    "build:full": "HASH_FILENAME=true postcss -d ../static/ 'src/full.css'",
    "watch": "npm-run-all --parallel watch:*",
    "watch:criticals": "postcss -d ../layouts/partials/ 'src/critical-*.css' --watch",
    "watch:full": "postcss -d ../static/ 'src/full.css' --watch"
  }
}
